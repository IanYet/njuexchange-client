/* pages/user/user.wxss */
page{
    --length: 4rem;
}
.header{
    box-sizing: border-box;
    width: calc( 100vw - 40px);
    height: 7rem;
    display: flex;
    align-items: center;

    margin-bottom: 20px;
}
.avatar-container{
    height: var(--length);
    width: var(--length);
    border-radius: calc( var(--length) / 2);

    border: 1px solid var(--light-gray);

    overflow: hidden;
}
.info-container{
    box-sizing: border-box;
    margin-left: 1rem;

    height: var(--length);
    font-size: 1.2rem;
    font-weight: bolder;

    display: flex;
    flex-direction: column;
    justify-content: center;
}
.info-container view{
    font-size: 0.8rem;
    font-weight: normal;

    margin-top: 0.5rem;
}
.space-holder{
    flex-grow: 1;
    flex-shrink: 1;
}
.arrow{
    width: 1.2rem;
    height: 1.2rem;
}
.content-container{
    flex-grow: 1;
    box-sizing: border-box;
    padding: 0 20px;
    width: 100vw;   
    margin: 20px 0;
}

.title-container{
    box-sizing: border-box;
    height: 4rem;
    border-top: 1px solid var(--light-gray);

    padding: 0 20px;

    display: flex;
    justify-content: space-between;
    align-items: center;
}
.title-container:nth-last-child(2){
    border-bottom: 1px solid var(--light-gray);

}
.spread .title-container{
    border-bottom: 1px solid var(--light-gray);
}