/* pages/studentAuth/studentAuth.wxss */
button.big{
    width: 100%;
    height: 3rem;
    font-size: 1rem;
    line-height: 3rem;

    margin-bottom: 20px;
}
.card{
    width: 90vw;
    height: auto;
}
.tag-container{
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 0.5rem;

    font-size: 1.1rem;
}
.arrow{
    width: 1rem;
    height: 1rem;

    transition: all 300ms;
}
.arrow.selected{
    transform: rotate(90deg);
}
.tag{
    line-height: 4rem;
    background-color: #fff;
}

.tag.selected{
    font-weight: bolder;
    color: black;
}

.content-container{
    box-sizing: border-box;
    overflow: hidden;

    height:0;
    transition: all 300ms;
}
.content-container.selected{
    height: calc(7rem + 40px);
}
.content-container.arti.selected{
    height: calc(10.9rem + 60px);
}
.num-input{
    display: flex;
    align-items: center;
    border-radius: 1.5rem;

    margin-bottom: 20px;
}
.num-prefix{
    height: 4rem;
    flex-shrink: 1;

    padding-left: 0.5rem;
}
.num-suffix{
    height: 4rem;
    line-height: 4rem;
    padding-right: 0.5rem;
}

.veri-input{
    width: 100%;
    height: 4rem;
    margin-bottom: 20px;

    text-align: center;
    font-weight: bolder;
}

.intro{
    font-size: 0.9rem;
    line-height: 1.3rem;
    color: #555555;
    padding: 0 0.5rem;

    margin-bottom: 20px;
}